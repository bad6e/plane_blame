<div class="container">
  <div class="row">
    <div class="col-md-4 project">
      <h3 id="counter"><%= @statistics.total_departures %></h3>
      <h4>Total Flights Tracked</h4>
    </div>
    <div class="col-md-4 project">
      <h3 id="counter1"><%= @statistics.total_on_time_departures %></h3>
      <h4>Total On Time Departures</h4>

    </div>
    <div class="col-md-4 project">
      <h3 id="counter2" style="margin-left: 20px;"><%= @statistics.total_late_departures %></h3>
