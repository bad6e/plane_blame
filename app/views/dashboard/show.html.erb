</div>

<div class="container">
  <div class="row">
    <div class="col-md-12 text-center">
      <br>
      <button class="btn btn-lg btn-default btn-home" id='stat_button' type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">Click Here for the Percentages</button>
    </div>
  </div>
</div>

<div class="collapse" id="collapseExample">
  <div class="container col-md-offset-4 col-md-4">
    <br>
    <table class="table table-condensed table-hover">
      <tr>
        <th>Airline</th>
        <th id='on_time'>On-Time Percentage<th>
      </tr>
      <% @statistics.total_percentage_and_name.each do |name| %>
        <tr>
          <td><%= name[1] %></td>
          <td align='right'><%= name[0] %>%</td>
      <% end %>
      </tr>
    </table>
  </div>
</div>








